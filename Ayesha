    <script>
        // Create floating hearts
        function createHearts() {
            const container = document.getElementById('heartsContainer');
            for (let i = 0; i < 25; i++) {
                const heart = document.createElement('div');
                heart.classList.add('heart');
                heart.innerHTML = 'â¤';
                heart.style.left = `${Math.random() * 100}%`;
                heart.style.fontSize = `${Math.random() * 20 + 15}px`;
                heart.style.animationDelay = `${Math.random() * 15}s`;
                heart.style.opacity = `${Math.random() * 0.5 + 0.3}`;
                container.appendChild(heart);
            }
        }
        
        // Music control
        const audio = document.getElementById('backgroundMusic');
        const musicIcon = document.getElementById('musicIcon');
        let isPlaying = true;
        
        // Try to play music automatically
        window.addEventListener('load', function() {
            audio.volume = 0.5; // Set volume to 50%
            
            // Try to play audio
            const playPromise = audio.play();
            
            if (playPromise !== undefined) {
                playPromise.then(() => {
                    // Audio started playing
                    console.log("Music is playing automatically");
                }).catch(error => {
                    // Auto-play was prevented, show message
                    console.log("Auto-play prevented. Click the music icon to play.");
                    musicIcon.innerHTML = '<i class="fas fa-play"></i>';
                    isPlaying = false;
                });
            }
        });
        
        // Toggle music on icon click
        musicIcon.addEventListener('click', function() {
            if (isPlaying) {
                audio.pause();
                musicIcon.innerHTML = '<i class="fas fa-play"></i>';
                isPlaying = false;
            } else {
                audio.play();
                musicIcon.innerHTML = '<i class="fas fa-music"></i>';
                isPlaying = true;
            }
        });
        
        // Page navigation system
        let currentPage = 1;
        const totalPages = 6;
        
        function goToPage(pageNum) {
            // Validate page number
            if (pageNum < 1) pageNum = 1;
            if (pageNum > totalPages) pageNum = totalPages;
            
            // Remove active class from current page and dot
            document.getElementById(`page${currentPage}`).classList.remove('active');
            document.querySelectorAll('.dot')[currentPage - 1].classList.remove('active');
            
            // Set new current page
            currentPage = pageNum;
            
            // Add active class to new page and dot
            document.getElementById(`page${currentPage}`).classList.add('active');
            document.querySelectorAll('.dot')[currentPage - 1].classList.add('active');
            
            // Scroll to top of page
            window.scrollTo(0, 0);
            
            // Add fade-in animation to elements
            setTimeout(() => {
                const elements = document.querySelectorAll(`#page${currentPage} .fade-in`);
                elements.forEach(el => {
                    el.style.animation = 'none';
                    setTimeout(() => {
                        el.style.animation = 'fadeIn 1s ease forwards';
                    }, 10);
                });
            }, 100);
        }
        
        function nextPage() {
            goToPage(currentPage + 1);
        }
        
        function prevPage() {
            goToPage(currentPage - 1);
        }
        
        // Cake cutting function
        function cutCake() {
            const flame = document.getElementById('flame');
            const btn = document.getElementById('cutCakeBtn');
            
            // Extinguish flame
            flame.style.opacity = '0';
            flame.style.transition = 'opacity 1s';
            
            // Change button text
            btn.innerHTML = 'Cake Cut! Now Let\'s Begin 2026 Together! <i class="fas fa-heart"></i>';
            btn.disabled = true;
            btn.style.background = 'linear-gradient(45deg, #4CAF50, #8BC34A)';
            
            // Play celebration sound
            const celebrationAudio = document.getElementById('celebrationSound');
            celebrationAudio.volume = 0.3;
            celebrationAudio.play().catch(e => console.log("Celebration sound could not play"));
            
            // Show confetti effect
            createConfetti();
            
            // Move to next page after delay
            setTimeout(() => {
                nextPage();
            }, 3000);
        }
        
        // Create confetti effect
        function createConfetti() {
            const colors = ['#e91e63', '#6a11cb', '#2575fc', '#ffcc00', '#4CAF50'];
            const container = document.getElementById('heartsContainer');
            
            for (let i = 0; i < 80; i++) {
                const confetti = document.createElement('div');
                confetti.classList.add('heart');
                confetti.innerHTML = ['â¤', 'âœ¨', 'ðŸŽ‰', 'ðŸŽŠ', 'ðŸ¥³'][Math.floor(Math.random() * 5)];
                confetti.style.left = `${Math.random() * 100}%`;
                confetti.style.fontSize = `${Math.random() * 20 + 10}px`;
                confetti.style.color = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.animation = `floatUp ${Math.random() * 3 + 2}s linear forwards`;
                confetti.style.animationDelay = '0s';
                container.appendChild(confetti);
                
                // Remove after animation
                setTimeout(() => {
                    if (confetti.parentNode) {
                        confetti.remove();
                    }
                }, 5000);
            }
        }
        
        // Navigation dots click events
        document.querySelectorAll('.dot').forEach((dot, index) => {
            dot.addEventListener('click', () => {
                goToPage(index + 1);
            });
        });
        
        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowRight' || e.key === ' ') {
                nextPage();
            }
            if (e.key === 'ArrowLeft') {
                prevPage();
            }
        });
        
        // Initialize
        window.onload = function() {
            createHearts();
            
            // Add fade-in to initial elements
            document.querySelectorAll('.fade-in').forEach(el => {
                el.style.animation = 'fadeIn 1s ease forwards';
            });
            
            // Make sure first page is active
            goToPage(1);
        };
    </script>
</body>
</html>
```
